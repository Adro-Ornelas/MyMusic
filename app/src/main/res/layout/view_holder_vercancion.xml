<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="25dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/seleccionarCancion"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="start"
            android:background="@drawable/card_table_background">
            <ImageView
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:contentDescription="@string/album_image"
                android:src="@drawable/baseline_music_note_24"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_gravity="center">
                    <TextView
                        android:id="@+id/txtv_tituloCancion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/optionSongs"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_condensed_semibold"/>

                <TextView
                    android:id="@+id/txtv_artistaCancion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_semibold"
                    android:text="Artista"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtv_duracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/roboto_condensed_semibold"
                android:text="DuraciÃ³n"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:paddingEnd="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>